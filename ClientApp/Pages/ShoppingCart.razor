@page "/shoppingcart"

<SecondRibbon IsShown="false" />

<h3 class="my-5">
  Shopping cart
</h3>


@if (Items != null && Items.Any())
{
  <div class="row gx-3">
    <div class="col-8">
      @foreach (var line in Items)
      {
        <div class="card shopping-cart-card mb-2">
          <div class="row">
            <div class="col-md-4">
              <img src="@line.Pie.ImageThumbnailUrl" class="img-fluid rounded-start p-2" alt="@line.Pie.Name">
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="card-body">
                  <h5 class="card-text">@line.Amount x @line.Pie.Name</h5>
                  <div class="d-flex justify-content-between">
                    <h6>@line.Pie.ShortDescription</h6>
                    <h2>@line.Pie.Price.ToString("c")</h2>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="addToCart">
                  <UpdateCartForm ShoppingCartItem="line" />
                </div>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
    <div class="col-4">
      <div class="card shopping-cart-card p-3">
        <div class="row">
          <h4 class="col">Total:</h4>
          @if (Total != decimal.Zero)
          {
            <h4 class="col text-end">@Total.ToString()</h4>
          }
          else
          {
            <h4 class="col text-end">c</h4>
          }
        </div>
        <hr />
        <div class="text-center d-grid" />
        <a class="btn btn-secondary" href="/checkout">
          <h4>Check out now!</h4>
        </a>
      </div>
    </div>
  </div>
}
