@page "/checkout"
@*"{id:int?}" --> if we need the 'id value' in this page*@

<EditForm Model="@Order" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit" class="mt-4">
  <h4>You're just one step away from your delicious pies.</h4>

  <DataAnnotationsValidator />
  <ValidationSummary></ValidationSummary>

  <div class="form-group row">
    <label for="lastName" class="col-sm-3">Last name: </label>
    <InputText id="lastName" class="form-control col-sm-8" @bind-Value="@Order.LastName" placeholder="Enter last name"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.LastName)" />
  </div>

  <div class="form-group row">
    <label for="firstName" class="col-sm-3">First name: </label>
    <InputText id="firstName" class="form-control col-sm-8" @bind-Value="@Order.FirstName" placeholder="Enter first name"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.FirstName)" />
  </div>

  <div class="form-group row">
    <label for="addressLine1" class="col-sm-3">AddressLine1: </label>
    <InputText id="addressLine1" class="form-control col-sm-8" @bind-Value="@Order.AddressLine1" placeholder="Enter AddressLine1"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.AddressLine1)" />
  </div>

  <div class="form-group row">
    <label for="addressLine2" class="col-sm-3">AddressLine2: </label>
    <InputText id="addressLine2" class="form-control col-sm-8" @bind-Value="@Order.AddressLine2" placeholder="Enter AddressLine2"></InputText>
  </div>

  <div class="form-group row">
    <label for="zip" class="col-sm-3">Zip code: </label>
    <InputText id="zip" class="form-control col-sm-8" @bind-Value="@Order.ZipCode" placeholder="Enter zip code"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.ZipCode)" />
  </div>

  <div class="form-group row">
    <label for="city" class="col-sm-3">City: </label>
    <InputText id="city" class="form-control col-sm-8" @bind-Value="@Order.City" placeholder="Enter city"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.City)" />
  </div>

  <div class="form-group row">
    <label for="state" class="col-sm-3">State: </label>
    <InputText id="state" class="form-control col-sm-8" @bind-Value="@Order.State" placeholder="Enter state"></InputText>
  </div>

  <div class="form-group row">
    <label for="country" class="col-sm-3">Country: </label>
    <InputText id="country" class="form-control col-sm-8" @bind-Value="@Order.Country" placeholder="Enter country"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.Country)" />
  </div>

  <div class="form-group row">
    <label for="phonenumber" class="col-sm-3">Phone number: </label>
    <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@Order.PhoneNumber" placeholder="Enter phone number"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.PhoneNumber)" />
  </div>

  <div class="form-group row">
    <label for="email" class="col-sm-3">Email: </label>
    <InputText id="email" class="form-control col-sm-8" @bind-Value="@Order.Email" placeholder="Enter email"></InputText>
    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Order.Email)" />
  </div>

  <div class="form-group row">
    <div class="col-sm-4 mt-1">
      <button type="submit" class="btn btn-primary edit-btn w-auto">Complete order</button>
    </div>

    <div class="col-sm-8 mt-1 d-flex justify-content-end">
      <a class="btn btn-secondary w-auto" @onclick="@NavigateToHomePage">Cancel</a>
    </div>
  </div>

</EditForm>